@model List<Expence_tracker3.Context.Category>


@{
    ViewBag.Title = "CategoryList";
}

<h2>CategoryList</h2>

<table class="table table-hover">
    <tr>
        @*<th>CategoryId</th>*@
        <th>CategoryName</th>
        <th>CategoryLimit</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.CategoryId</td>*@
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryLimit</td>
                    <td>
                        <a href="@Url.Action("Expence", new { item.CategoryId,item.CategoryName,item.CategoryLimit})" class="btn btn-success">Edit</a>
                        <a href="@Url.Action("Delete",new { item.CategoryId})" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
    

</table>

